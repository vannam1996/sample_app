<% provide :title, t("user_mailer.password_reset.title_rs") %>
<h1><%= t "user_mailer.password_reset.title_rs" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: password_reset_path(params[:id]) do |f| %>
      <%= render "shared/error_messages" %>

      <%= hidden_field_tag :email, @user.email %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t("user_mailer.password_reset.pass_confirm_text") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t("user_mailer.password_reset.btn_submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
