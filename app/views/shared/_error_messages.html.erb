<% if object.errors.any? %>
  <div id = "error_explanation">
    <div class = "alert alert-danger">
      <%= t "shared.descrip1" %> <%= pluralize(object.errors.size, "error") %>.
    </div>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
